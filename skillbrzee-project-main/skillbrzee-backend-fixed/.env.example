# ─────────────────────────────────────────────
#  Skillbrzee Backend — Environment Variables
#  Copy this to .env and fill in your values
# ─────────────────────────────────────────────

# Server
PORT=5000
NODE_ENV=production

# MongoDB (get from MongoDB Atlas → Connect → Drivers)
MONGO_URI=mongodb+srv://YOUR_USER:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/skillbrzee?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.com

# Base URL of this backend (for file download links)
BASE_URL=https://your-backend.onrender.com

# JWT Secrets (use long random strings — e.g. run: openssl rand -base64 64)
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING_AT_LEAST_64_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_TO_A_DIFFERENT_LONG_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Admin credentials (auto-created on first boot)
ADMIN_EMAIL=admin@skillbrzee.in
ADMIN_PASSWORD=Admin@Skillbrzee123

# Razorpay (get from https://dashboard.razorpay.com)
# Leave as placeholder to run in DEV MODE (no real payments)
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_HERE
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_SECRET_HERE

# Email (optional — enrollment emails won't send if blank)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Skillbrzee <support@skillbrzee.in>
